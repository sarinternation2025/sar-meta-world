{
  "name": "meta-world",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:cli": "npm run dev --workspace=sar-cli",
    "dev:3d": "npm run dev --workspace=react-app-3d",
    "dev:sync": "npm run dev-sync --workspace=react-app-3d",
    "dev:dashboard": "npm run dashboard --workspace=react-app-3d",
    "dev-full": "npm-run-all --parallel dev:backend dev:frontend dev:3d",
    "dev-stack": "npm-run-all --parallel dev:backend dev:3d dev:sync",
    "build": "npm run build --workspace=frontend",
    "build:3d": "npm run build --workspace=react-app-3d",
    "build:backend": "npm run build --workspace=backend",
    "build:all": "npm-run-all build build:3d build:backend",
    "build:prod": "NODE_ENV=production npm run build:all",
    "build:report": "npm run build --workspace=react-app-3d && cd packages/react-app && ./scripts/comprehensive-build-report.sh",
    "start": "npm run start --workspace=backend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:3d": "npm run start --workspace=react-app-3d",
    "start:cli": "npm run start --workspace=sar-cli",
    "start:prod": "NODE_ENV=production npm-run-all --parallel start start:3d",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint --workspaces -- --fix",
    "test": "npm run test --workspaces",
    "test:3d": "npm run test --workspace=react-app-3d",
    "test:backend": "node test-backend.js",
    "test:connections": "node test-connections.js",
    "test:all": "npm-run-all test:connections test:backend test",
    "validate": "node validate-env.js",
    "cli": "npm run start --workspace=sar-cli --",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up -d",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "security:audit": "./docker/scripts/security_monitoring_verification.sh",
    "deploy:prod": "./scripts/deploy-production.sh",
    "monitor": "./scripts/process-monitor.sh",
    "setup": "npm install && npm run cli -- setup",
    "port:status": "npm run port:status --workspace=react-app-3d",
    "port:clean": "npm run port:clean --workspace=react-app-3d",
    "port:start": "npm run port:start --workspace=react-app-3d",
    "clean": "npm-run-all clean:*",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "clean:build": "rm -rf packages/*/dist packages/*/build",
    "clean:logs": "rm -rf logs/*.log",
    "postinstall": "npm run validate"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@influxdata/influxdb-client": "^1.35.0",
    "colors": "^1.4.0",
    "pg": "^8.16.3",
    "redis": "^5.6.0"
  }
}
